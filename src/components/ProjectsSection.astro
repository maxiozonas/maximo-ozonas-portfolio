---
import ProjectCard from "./ProjectCard.astro";
import AcademicProjectsSection from "./AcademicProjectsSection.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Datos de proyectos
const projects = [
  {
    id: "madryn-empleos",
    title: t('project1.title'),
    description: t('project1.description'),
    image: "/projects/madryn-empleos.jpeg",
    tags: ["NextJS", "Spring Boot", "TailwindCSS", "TypeScript", "MySQL"],
    githubUrl: "https://github.com/maximo-ozonas/portfolio",
    demoUrl: "https://madrynempleos.com",
    featured: true,
    size: "medium" as const
  },
  {
    id: "madryn-buceo",
    title: t('project2.title'),
    description: t('project2.description'),
    image: "/projects/madryn-buceo.jpeg",
    tags: ["NextJS", "React", "TailwindCSS", "Spring Boot", "MySQL"],
    githubUrl: "https://github.com/maximo-ozonas/madryn-buceo",
    demoUrl: "https://madrynbuceo.com/",
    featured: false,
    size: "small" as const
  }
];
---

<section id="projects" class="py-20 min-h-screen">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-2">
        {t('projects.title')}
      </h2>
      <div class="bg-[#99d98c] w-[50%] h-[4px] mx-auto mt-4 mb-4"></div>
      <p class="text-gray-300 text-center max-w-2xl mx-auto text-lg mb-8">
        {t('projects.description')}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => (
        <ProjectCard project={project} />
      ))}
    </div>
    
    {/* Proyectos Acad√©micoss */}
    <AcademicProjectsSection />
  </div>
</section>
