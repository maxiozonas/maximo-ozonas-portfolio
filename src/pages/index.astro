---
import { defaultLang } from '../i18n/ui';

// Asegurarse de que esta p√°gina se renderice en el servidor
export const prerender = true;

// Redireccionar al idioma predeterminado
const redirectUrl = `/${defaultLang}`;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
  <title>Redireccionando...</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #0f172a;
      color: white;
    }
    .container {
      text-align: center;
      padding: 2rem;
    }
    .redirect-text {
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }
    .spinner {
      display: inline-block;
      width: 2rem;
      height: 2rem;
      border: 0.25rem solid rgba(255,255,255,0.3);
      border-radius: 50%;
      border-top-color: #99d98c;
      animation: spin 1s ease-in-out infinite;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="redirect-text">Redireccionando al sitio...</div>
    <div class="spinner"></div>
  </div>

  <script define:vars={{ redirectUrl }}>
    // Redireccionar usando JavaScript como respaldo
    window.location.href = redirectUrl;
  </script>
</body>
</html>
